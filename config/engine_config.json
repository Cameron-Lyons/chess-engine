{
  "engine": {
    "name": "ModernChess",
    "version": "1.2.0",
    "author": "Chess Engine Team",
    "features": [
      "Alpha-beta search with transposition table",
      "Null move pruning",
      "Late move reductions (LMR)",
      "Iterative deepening",
      "Parallel search",
      "Quiescence search",
      "King safety evaluation",
      "Killer moves heuristic",
      "History heuristic",
      "Opening book",
      "Zobrist hashing"
    ]
  },
  "search": {
    "default_depth": 6,
    "max_depth": 12,
    "time_management": true,
    "null_move_pruning": true,
    "late_move_reduction": true,
    "quiescence_search": true,
    "killer_moves": {
      "enabled": true,
      "max_killers_per_ply": 2,
      "max_ply": 64
    }
  },
  "evaluation": {
    "material_weights": {
      "pawn": 100,
      "knight": 320,
      "bishop": 330,
      "rook": 500,
      "queen": 900,
      "king": 20000
    },
    "positional_factors": {
      "center_control": true,
      "mobility": true,
      "pawn_structure": true,
      "king_safety": {
        "enabled": true,
        "pawn_shield_bonus": 10,
        "open_file_penalty": 20,
        "semi_open_file_penalty": 10,
        "attack_units_max": 100
      }
    }
  },
  "ui": {
    "board_style": "unicode",
    "show_coordinates": true,
    "show_last_move": true,
    "show_timing": true
  },
  "debug": {
    "log_level": "info",
    "show_search_info": true,
    "enable_move_validation": true
  }
} 